.uni-popup {
  position: fixed;
  z-index: 99;
}
.uni-popup.top, .uni-popup.left, .uni-popup.right {
  top: 0;
}
.uni-popup .uni-popup__wrapper {
  display: block;
  position: relative;
  /* iphonex 等安全区设置，底部安全区适配 */
}
.uni-popup .uni-popup__wrapper.left, .uni-popup .uni-popup__wrapper.right {
  padding-top: 0;
  flex: 1;
}
.fixforpc-z-index {
  z-index: 999;
}
.fixforpc-top {
  border-radius: 24rpx;
  top: 0;
}
.uni-popup__wrapper {
  color: #fff;
  box-sizing: border-box;
  border-radius: 30rpx 30rpx 0 0;
  overflow: hidden;
  width: 100%;
  background-color: #212531;
  position: fixed;
  bottom: -100%;
  padding: 46rpx;
  transition: 0.3s all;
}
.uni-popup__wrapper .example {
  margin-top: 40rpx;
}
.uni-popup__wrapper .example .example-tit {
  color: #9ea2ad;
  font-size: 28rpx;
}
.uni-popup__wrapper .example .tit-area {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;
  margin-left: 50rpx;
  flex: 1;
  gap: 30rpx 0;
}
.uni-popup__wrapper .example .tit-area .rig-text {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}
.uni-popup__wrapper .example .item .txt {
  display: flex;
  align-items: center;
  color: #cbced2;
  font-size: 24rpx;
}
.uni-popup__wrapper .desc {
  margin: 20rpx 0;
  font-size: 24rpx;
  color: #686d81;
}
.uni-popup__wrapper .uploadImg {
  background-color: #634cfe;
  color: #fff;
  border-radius: 50rpx;
}
.uni-popup__wrapper .tit {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
  font-weight: 700;
}
.uni-popup__wrapper .top-area {
  margin-top: 104rpx;
}
.uni-popup__wrapper .top-area .Title {
  font-weight: 600;
  font-size: 48rpx;
  color: #16151f;
  line-height: 56rpx;
}
.uni-popup__wrapper .top-area .TextSize {
  margin-top: 6rpx;
  margin-bottom: 64rpx;
}

